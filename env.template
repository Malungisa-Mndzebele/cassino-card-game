# ============================================
# CASINO CARD GAME - ENVIRONMENT TEMPLATE
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================
# For local PostgreSQL (Docker)
DATABASE_URL=postgresql://casino_user:YOUR_SECURE_PASSWORD@localhost:5432/casino_game

# For production PostgreSQL
# DATABASE_URL=postgresql://username:password@host:port/database

# For local SQLite (fallback - not recommended for production)
# DATABASE_URL=sqlite:///./casino_game.db

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Backend server settings
PORT=8000
HOST=0.0.0.0

# Security settings
SECRET_KEY=your-super-secret-jwt-key-here-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Session settings
SESSION_SECRET=your-session-secret-key-here-minimum-32-characters

# ============================================
# CORS CONFIGURATION
# ============================================
# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001

# For production, add your domain:
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# API endpoints
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# For production:
# REACT_APP_API_URL=https://api.yourdomain.com
# REACT_APP_WS_URL=wss://api.yourdomain.com

# ============================================
# DOCKER CONFIGURATION
# ============================================
# PostgreSQL Docker settings
POSTGRES_DB=casino_game
POSTGRES_USER=casino_user
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD

# pgAdmin settings
PGADMIN_DEFAULT_EMAIL=admin@casino.com
PGADMIN_DEFAULT_PASSWORD=YOUR_ADMIN_PASSWORD

# ============================================
# PRODUCTION SECURITY SETTINGS
# ============================================
# SSL/TLS settings (for production)
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key

# Rate limiting
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60

# Security headers
# SECURITY_HEADERS_ENABLED=true

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Debug mode (NEVER enable in production!)
DEBUG=false

# Hot reload settings (for development)
# CHOKIDAR_USEPOLLING=true
# WATCHPACK_POLLING=true
