{
  "name": "cassino-card-game",
  "version": "1.0.0",
  "description": "Real-time multiplayer Cassino card game for khasinogaming.com",
  "homepage": "https://khasinogaming.com/cassino",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "deploy": "npm run build && echo 'Build complete! Upload the dist/ folder contents to your web server.'",
    "deploy:build": "npm run build && npm run deploy:prepare",
    "deploy:prepare": "echo 'Preparing deployment package...' && cp DEPLOYMENT_GUIDE.md dist/ && cp README.md dist/",
    "supabase:login": "supabase login",
    "supabase:link": "supabase link",
    "supabase:deploy": "supabase functions deploy server",
    "supabase:logs": "supabase functions logs server",
    "clean": "rm -rf dist node_modules",
    "fresh-install": "npm run clean && npm install",
    "type-check": "tsc --noEmit",
    "lint": "echo 'Linting would go here'",
    "test:unit": "jest --testPathPattern=src/.*\\.test\\.(ts|tsx)$",
    "test:integration": "jest --testPathPattern=tests/integration/.*\\.test\\.(ts|tsx)$"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "latest",
    "recharts": "latest",
    "motion": "latest",
    "sonner": "^2.0.3",
    "react-hook-form": "^7.55.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "tailwindcss": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0"
  },
  "keywords": [
    "cassino",
    "card game",
    "multiplayer",
    "real-time",
    "web game",
    "khasinogaming",
    "casino",
    "cards",
    "online game"
  ],
  "author": "KhasinoGaming",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/cassino-card-game.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/cassino-card-game/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "extensionsToTreatAsEsm": [".ts", ".tsx"],
  "globals": {
    "ts-jest": {
      "useESM": true
    }
  }
}