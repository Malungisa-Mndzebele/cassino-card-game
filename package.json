{
  "name": "cassino-card-game",
  "version": "1.0.0",
  "description": "Real-time multiplayer Cassino card game for khasinogaming.com",
  "homepage": "https://khasinogaming.com/cassino",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage",
    "deploy": "npm run build && echo 'Build complete! Upload the dist/ folder contents to your web server.'",
    "deploy:build": "npm run build && npm run deploy:prepare",
    "deploy:prepare": "echo 'Preparing deployment package...' && cp DEPLOYMENT_GUIDE.md dist/ && cp README.md dist/",
    "supabase:login": "supabase login",
    "supabase:link": "supabase link",
    "supabase:deploy": "supabase functions deploy server",
    "supabase:logs": "supabase functions logs server",
    "clean": "del /s /q /f dist node_modules 2>nul || rmdir /s /q dist node_modules 2>nul",
    "fresh-install": "npm run clean && npm install",
    "type-check": "tsc --noEmit",
    "lint": "echo 'Linting would go here'",
    "test:unit": "vitest run 'src/**/*.test.(ts|tsx)'",
    "test:integration": "vitest run 'tests/integration/**/*.test.(ts|tsx)'",
    "test:game-creation": "vitest --no-watch tests/integration/GameCreation.test.tsx --reporter=verbose"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-context-menu": "^2.2.15",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-hover-card": "^1.1.14",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.15",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toggle": "^1.1.9",
    "@radix-ui/react-toggle-group": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/postcss": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "convex": "^1.25.4",
    "lucide-react": "latest",
    "motion": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.55.0",
    "recharts": "latest",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "terser": "^5.43.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^2.1.9"
  },
  "keywords": [
    "cassino",
    "card game",
    "multiplayer",
    "real-time",
    "web game",
    "khasinogaming",
    "casino",
    "cards",
    "online game"
  ],
  "author": "KhasinoGaming",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/cassino-card-game.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/cassino-card-game/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "extensionsToTreatAsEsm": [
    ".ts",
    ".tsx"
  ],
  "globals": {
    "ts-jest": {
      "useESM": true
    }
  }
}
