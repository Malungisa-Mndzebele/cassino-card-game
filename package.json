{
  "name": "cassino-card-game",
  "version": "2.0.0",
  "description": "Real-time multiplayer Casino card game with SvelteKit and FastAPI",
  "type": "module",
  "scripts": {
    "dev": "vite dev --host",
    "build": "vite build",
    "preview": "vite preview --port 5173",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:backend": "cd backend && python -m pytest test_quick_wins.py test_session_manager_full.py test_cache_manager_full.py -v",
    "test:quick": "powershell -ExecutionPolicy Bypass -File ./run-quick-tests.ps1",
    "test:all": "powershell -ExecutionPolicy Bypass -File ./run-all-tests.ps1",
    "test:production": "playwright test tests/e2e/production-smoke-test.spec.ts --config=playwright.production.config.ts",
    "start:backend": "cd backend && python start_production.py",
    "start:redis": "docker-compose up redis -d",
    "start:postgres": "docker-compose up postgres -d",
    "start:db": "docker-compose up -d",
    "stop:db": "docker-compose down",
    "deploy:build": "npm run build",
    "deploy:ftp": "node deploy-secure.js"
  },
  "dependencies": {
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.8.5",
    "svelte": "^5.2.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/svelte": "^5.2.9",
    "@types/node": "^22.10.1",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.1",
    "happy-dom": "^20.0.10",
    "playwright": "^1.56.1",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.8",
    "svelte-check": "^4.0.8",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.9"
  },
  "keywords": [
    "cassino",
    "card game",
    "multiplayer",
    "real-time",
    "sveltekit",
    "fastapi",
    "redis",
    "websocket"
  ],
  "author": "KhasinoGaming",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
