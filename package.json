{
  "name": "cassino-card-game",
  "version": "1.0.0",
  "description": "Real-time multiplayer Cassino card game for khasinogaming.com",
  "homepage": "https://khasinogaming.com/cassino",
  "scripts": {
    "dev": "vite --host",
    "start": "vite preview --port 5173 --strictPort",
    "build": "vite build",
    "start:backend": "cd backend && python3 start_production.py",
    "install:backend": "cd backend && python3 -m pip install -r requirements.txt",
    "install:frontend": "npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "test": "cd backend && python test_api_comprehensive.py",
    "test:backend": "cd backend && python test_api_comprehensive.py",
    "clean": "del /s /q /f node_modules 2>nul || rmdir /s /q node_modules 2>nul",
    "fresh-install": "npm run clean && npm install",
    "type-check": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx .",
    "format": "prettier --write .",
    "test:frontend": "vitest run --reporter=verbose",
    "preview": "vite preview --port 5173 --strictPort",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:full-game": "playwright test tests/e2e/complete-game-scenarios.spec.ts",
    "test:e2e:create-join": "playwright test tests/e2e/create-join.spec.ts",
    "test:e2e:random-join": "playwright test tests/e2e/random-join.spec.ts",

    "test:all": "node run-all-tests.js",
    "test:coverage": "npm run test:frontend -- --coverage && npm run test:backend",
    "test:comprehensive": "node run-all-tests.js",
    "deploy:guide": "echo 'ðŸ“– See FLYIO_SETUP.md for Fly.io deployment instructions'"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@tailwindcss/postcss": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "express": "^4.21.2",
    "http-proxy-middleware": "^2.0.9",
    "lucide-react": "latest",
    "motion": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^14.3.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^24.1.0",
    "playwright": "^1.48.2",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.0.0",
    "vite": "^5.4.21",
    "vitest": "^1.6.0",
    "wait-on": "^8.0.1"
  },
  "keywords": [
    "cassino",
    "card game",
    "multiplayer",
    "real-time",
    "web game",
    "khasinogaming",
    "casino",
    "cards",
    "online game",
    "ci-cd",
    "github-actions"
  ],
  "author": "KhasinoGaming",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/cassino-card-game.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/cassino-card-game/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
